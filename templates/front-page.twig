{% extends "base.twig" %}
{% block content %}
{% if hero_widget %}
	{{ hero_widget }}
	{% else %}
	<p class="set-up-needed">Set up your Hero Widget with Featured Hero Section from the Admin Appearance Widgets Panel.</p>
{% endif %}

	<div class="content-wrapper">
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<section class="article-content">
				<h1 class="article-h1">{{post.title}}</h1>
				<div class="article-body">
					{{post.content}}
				</div>
			</section>
		</article>
	</div><!-- /content-wrapper -->
{% endblock %}